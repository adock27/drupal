<table>
  <thead>
  <tr>
    <th>ID</th>
    <th>Título</th>
    <th>Año</th>
    <th>Duración</th>
    <th>Género</th>
    <th>Sinopsis</th>
    <th>Poster</th>
    <th>Acciones</th>
  </tr>
  </thead>
  <tbody>
  {% for pelicula in peliculas %}
    <tr>
      <td>{{ pelicula.id }}</td>
      <td>{{ pelicula.titulo }}</td>
      <td>{{ pelicula.ano }}</td>
      <td>{{ pelicula.duracion }}</td>
      <td>{{ pelicula.genero }}</td>
      <td>{{ pelicula.sinopsis }}</td>
      <td>{{ pelicula.poster }}</td>
      <td>
        <a href="/peliculas/editar/{{ pelicula.id }}">Editar</a>
        <a href="/peliculas/eliminar/{{ pelicula.id }}">Eliminar</a>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
